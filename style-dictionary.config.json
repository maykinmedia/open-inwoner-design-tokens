{
  "source": [
    "./src/**/tokens.json",
    "./src/**/*.tokens.json"
  ],
  "platforms": {
    "css": {
      "transforms": ["attribute/cti", "name/cti/kebab", "color/hsl-4"],
      "buildPath": "dist/css/",
      "files": [
        {
          "destination": "index.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true
          }
        },
        {
          "destination": "components/headings.css",
          "format": "css/variables",
          "options": {
            "selector": ".heading-1",
            "outputReferences": true
          }
        }
      ]
    },
    "scss": {
      "transforms": ["attribute/cti", "name/cti/kebab", "color/hsl-4"],
      "buildPath": "dist/",
      "files": [
        {
          "destination": "_variables.scss",
          "format": "scss/variables",
          "options": {
            "outputReferences": true
          }
        }
      ]
    }
  }
}
